{
  "name": "fhevm-universal-sdk-template",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK with framework-agnostic design and comprehensive examples",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "build:sdk": "npm run build --workspace=packages/fhevm-sdk",
    "build:all": "npm run build:sdk && npm run build --workspaces --if-present",
    "dev:nextjs": "npm run dev --workspace=examples/nextjs-example",
    "dev:react": "npm run dev --workspace=examples/react-example",
    "dev:vue": "npm run dev --workspace=examples/vue-example",
    "dev:nodejs": "npm run dev --workspace=examples/nodejs-example",
    "start:nextjs": "npm run dev:nextjs",
    "compile:contracts": "npm run compile --workspace=examples/agricultural-futures",
    "deploy:contracts": "npm run deploy --workspace=examples/agricultural-futures",
    "test:sdk": "npm run test --workspace=packages/fhevm-sdk",
    "test:all": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,md}'",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "zama",
    "encryption",
    "privacy",
    "blockchain",
    "ethereum",
    "sdk",
    "react",
    "nextjs",
    "vue",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
